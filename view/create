		<script type="text/javascript" src="http://code.jquery.com/jquery-1.8.3.js"></script>
		<script type="text/javascript" src="assets/js/bootstrap.min.js"></script>
		<script>
		$(function(){
			var id;
			$('#basic_info').submit(function(e){
				e.preventDefault();
				$.ajax({
					url:'/create/save/basic_info',
					type:'POST',
					dataType:'json',
					data:$('#basic_info').serialize(),
					success:function(data){
						if(data.success){
							id = data.id;
							$('html,body').animate({
								scrollTop:$('#questions_set').offset().top
							},'fast');
						}
					}
				});
			});
		});
		</script>
