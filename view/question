		<div>
			<form action="/questions/<%= id %>/submit">
				<% questions.forEach(function(i){
					var q = questions[i];
				%>
				<div class="question" data-id="<%= q.id %>" data-required="<%= q.required %>">
					<p class="lead"><span><%= i+1 %>.</span> <%= q.name %></p>
					<% 
					switch(q.type){
						case "fillin":
					%>
					<input type="text" name="<%= q.id %>" placeholder="Type here..."/>
					<% 	break;
						
						case "mc":
						var choices = q.choices.solit(',');
						choices.forEach(function(i){
							var choice = choices[i];
					%>
					<input type="radio" name="<%= q.id %>" value="<%= choice %>" />
					<%
						});
						break;
						
						case "mmc":
						var choices = q.choices.solit(',');
						choices.forEach(function(i){
							var choice = choices[i];
					%>
					<input type="checkbox" name="<%= q.id %>[]" value="<%= choice %>" />
					<%
						});
						break;
					}
					%>
				</div>
				<% }); %>
				<button class="btn btn-large">Submit</button>
			</form>
